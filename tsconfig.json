{
    "compilerOptions": {
      "target": "es2015",
      "allowJs": true,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "outDir": "./lib"
    },
    "include": ["./src"]
  }
  